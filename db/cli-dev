#!/usr/bin/env bash

REPO_DIR="$(cd "$(dirname "$(readlink -f "$0")")" && cd .. && pwd)"
cd "${REPO_DIR}" || exit 1

set -eu
set -o pipefail

env UID="$(id -u)" GID="$(id -g)" docker-compose -f docker-compose.dev.yml --profile tool run \
  --rm \
  --user "$(id -u)" \
	--use-aliases \
  -e 'PGPASSWORD=niki' \
  db \
  psql  '--username=niki' \
        '--host=db' \
        "$@" \
        niki
