#!/usr/bin/env bash

set -eu
set -o pipefail

REPO_DIR="$(cd "$(dirname "$(readlink -f "$0")")" && cd .. && pwd)"
cd "${REPO_DIR}"

env UID="$(id -u)" GID="$(id -g)" docker-compose run \
  --rm \
  --user "$(id -u)" \
	--use-aliases \
  -e 'PGPASSWORD=niki' \
  db \
  pg_dump  '--username=niki' \
           '--host=db' \
           '--exclude-table=flyway_*' \
           "$@" \
           niki